<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Irinnahar_Comp304sec001_Lab2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    Header Title style -->
    <style name="Header_text">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">27dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    button style -->
    <style name="Button_default">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/light_green</item>
    </style>

    <!--   Default Activity style -->
    <style name="default_activity_style">
        <item name="android:padding">25dp</item>
        <item name="android:height">60dp</item>
    </style>

    <!--    Checkout screen textview design -->
    <style name="checkout_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>